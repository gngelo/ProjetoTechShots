
<%- contentFor('body') %>
<div class="">
    <div class="container mt-2S">
        <div class="container col-md-12 cad-centro">
            <div class="col-md-6 offset-md-3">
                
                <h3 class="text-center">Cadastro de Usuário</h3>

                <form class="mt-2"  action="/usuarios" method="POST">                   

                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Senha</label>
                        <input type="password" class="form-control" name="senha" id="senha" placeholder="Senha">
                    </div>

                    <div class="row col">
                        <div class="form-check col-md-6 text-center">
                            <input class="form-check-input" type="radio" name="tipousuario" id="tipoUsuario" value="Usuario" checked>
                            <label class="form-check-label" for="tipousuario1">Usúarios</label>
                        </div>
                        <div class="form-check col-md-6 text-center">
                            <input class="form-check-input" type="radio" name="tipousuario" id="tipoUsuario" value="Admi">
                            <label class="form-check-label" for="tipousuario2">Administrador</label>
                        </div>
                    </div>
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-primary" >Cadastrar</button>
                    </div>                

                </form>
            </div>
        </div>
    </div>
</div>